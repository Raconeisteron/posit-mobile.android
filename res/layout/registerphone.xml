<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">
 <LinearLayout 
    android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">
  	<TextView 
		android:id="@+id/emailLabel"
		android:text="@string/emailLabelText"
		android:textSize="14.5sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="left"
	/>

	<EditText
        android:id="@+id/email"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:layout_gravity="fill_horizontal"
        android:inputType="textEmailAddress|textAutoComplete"
	/>
	
    <TextView 
		android:id="@+id/passwordLabel"
		android:text="@string/passwordLabelText"
		android:textSize="14.5sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="left"
		/>
	<EditText
        android:id="@+id/password"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:layout_gravity="fill_horizontal"
        android:password="true"
        android:inputType="textPassword"/>
 	<Button 
		android:id="@+id/registerDeviceButton" 
    android:layout_width="140dp"
    android:layout_height="40dp"
    	android:layout_gravity="right"
		android:text="@string/login" 
		android:layout_marginBottom="40dp"
		/>       
		
  <TextView 
	android:id="@+id/accountNotFound"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/accountNotFoundMessage"
	android:visibility="gone"/>		
		
 <Button android:id="@+id/createaccount"
    android:layout_width="150dp"
    android:layout_height="40dp"
    android:layout_gravity="left"
    android:text="Create Account" />
    
		
  <Button android:id="@+id/more"
    android:layout_width="120dp"
    android:layout_height="40dp"
    android:layout_gravity="left"
    android:text="More Options" />
    

     <TextView 
		android:id="@+id/serverNameLabel"
		android:text="@string/serverNameLabelText"
		android:textSize="14.5sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="left"
		android:visibility="gone"
		/>
	<EditText
        android:id="@+id/serverName"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:textSize="10.5sp"
        android:text="http://www.cs.trincoll.edu/~pgautam/positweb"
        android:visibility="gone"/>
  
	<Button 
		android:id="@+id/registerUsingBarcodeButton" 
   		 android:layout_width="180dp"
    	android:layout_height="40dp"
		android:text="Register with Barcode"
		android:layout_gravity="left"
		android:visibility="gone" />
    
</LinearLayout>
</ScrollView>
